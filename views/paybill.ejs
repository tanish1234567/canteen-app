    <div class="conatiner-fluid" id ="checkoutcontainer">
    <table class="table">
        <thead>
          <tr>
            <th scope="col">Item-Name</th>
            <th scope="col">Item-Quantity</th>
            <th scope="col">Item-price</th>
          </tr>
        </thead>
        <tbody>
            <% items.forEach((item)=>{ %>
                <tr>
                  <td><%=item.productName%></td>
                  <td><%=item.productQuantity%></td>
                  <td><%=item.productPrice%></td>
                </tr>
            <% })  %>
        </tbody>
        <tr><td colspan = '4' class = "text-right font-weight-bold">Total Price :<%=totalamount%></td></tr>`
        
      </table>
      <form action="/payamount" method="post" id = "paybillform">
        <input type="text"name = "totalprice" id = "paybillforminput"value = "<%=totalamount%>"style = "display:none;">
        <input type="number"name = "phone" id = "phoneforminput" placeholder="Enter phone number"><br>
        <input type="email"name = "email" placeholder="Enter email"><br>
        <input type="text"name = "name" placeholder="Enter name"><br>
        <input type="text"name = "order" value = "<%=order%>"style="display:none;" id = "orderid">
        <button type="submit" onclick = "localStorage.clear();" class="btn btn-success my-2">Pay-Bill</button>
      </form>
    </div>

    <script src="js/index.js"></script>
        
